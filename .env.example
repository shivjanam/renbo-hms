# ===========================================
# Hospital Management System
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
DB_USERNAME=hms_user
DB_PASSWORD=hms_secure_password_here

# JWT & Security
JWT_SECRET=your-very-long-jwt-secret-key-minimum-256-bits-for-security
ENCRYPTION_KEY=your-32-character-encryption-key

# Application URLs
FRONTEND_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000
VITE_API_URL=http://localhost:8080
VITE_APP_NAME=Hospital Management System

# Hospital Configuration
HOSPITAL_NAME=City General Hospital
HOSPITAL_CODE=CGH001
HOSPITAL_ADDRESS=123 Main Street, City, State - 110001
HOSPITAL_PHONE=+91-1234567890
HOSPITAL_EMAIL=info@hospital.com

# GST & Tax
HOSPITAL_GSTIN=

# Payment Configuration
HOSPITAL_UPI_ID=
HOSPITAL_UPI_NAME=
HOSPITAL_BANK_NAME=
HOSPITAL_BANK_ACCOUNT=
HOSPITAL_BANK_IFSC=

# Razorpay (Optional)
RAZORPAY_ENABLED=false
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Email Configuration (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@hospital.com
RESEND_FROM_NAME=Hospital Management System
EMAIL_PREFER_RESEND=true

# SMS Configuration (Fast2SMS)
SMS_PROVIDER=fast2sms
FAST2SMS_API_KEY=

# SMTP Fallback (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_COOLDOWN_SECONDS=60
OTP_MAX_DAILY_LIMIT=10
